        <import addon="xbmc.python" version="2.19.0"/>
        <import addon="script.module.requests" version="2.12.4"/>
        <import addon="script.module.garepobg" version="0.1.3"/>
        <import addon="script.module.simplejson" version="3.3.0"/>
